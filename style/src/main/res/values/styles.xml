<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBase" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="Sothis" parent="AppBase">
        <item name="colorPrimary">@color/MaterialTeal600</item>
        <item name="colorPrimaryDark">@color/MaterialTeal900</item>
        <item name="colorAccent">@color/MaterialTeal900</item>
        <item name="toolbar_style">@style/SothisToolbar</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SothisDefault" parent="Sothis">
        <item name="colorAccent">@color/MaterialTeal900</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SothisToolbar" parent="SothisDefault">
        <item name="android:background">@color/MaterialTeal600</item>
        <item name="android:backgroundTint">@color/MaterialTeal600</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorAccent">@color/MaterialTeal900</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="android:colorControlNormal">@android:color/darker_gray</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="SothisProgress" parent="SothisDefault">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:indeterminateDrawable">@color/MaterialTeal600</item>
    </style>

    <style name="SothisDialog" parent="DialogLight"/>

    <style name="SothisText" parent="EditTextLight"/>

    <style name="DialogLight" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="EditTextLight" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textCursorDrawable">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppBaseChip" parent="Theme.MaterialComponents"/>

</resources>
