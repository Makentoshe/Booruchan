<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="@style/Default.Progress"
        android:id="@+id/fragment_sample_progress_indeterminate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:visibility="gone"
        style="@style/Default.Text.Main"
        android:id="@+id/fragment_sample_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="gone"
        style="@style/Default.Text.Support"
        android:id="@+id/fragment_sample_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dimenL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_sample_title" />

    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        style="?attr/booruchanButtonText"
        android:id="@+id/fragment_sample_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/posts_button_retry"
        android:layout_marginTop="@dimen/dimenL"
        app:layout_constraintTop_toBottomOf="@id/fragment_sample_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/fragment_sample_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shutter_background_color="@color/background"
        app:use_artwork="true"
        app:surface_type="texture_view"
        android:translationZ="2dp"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
