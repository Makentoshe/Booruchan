<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBase" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="Sotis" parent="AppBase">
        <item name="colorPrimary">@color/MaterialTeal600</item>
        <item name="colorPrimaryDark">@color/MaterialTeal900</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="SotisDefault" parent="Sotis">
        <item name="colorAccent">@color/MaterialTeal900</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SotisToolbar" parent="SotisDefault">
        <item name="android:background">@color/MaterialTeal600</item>
        <item name="android:backgroundTint">@color/MaterialTeal600</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorAccent">@color/MaterialTeal900</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="SotisProgress" parent="SotisDefault">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:indeterminateDrawable">@color/MaterialTeal600</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <style name="AppBaseChip" parent="Theme.MaterialComponents"/>

</resources>